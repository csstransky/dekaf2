find_path(BROTLI_INCLUDE_DIR NAMES "brotli/decode.h")
find_library(BROTLICOMMON_LIBRARY NAMES brotlicommon)
find_library(BROTLIDEC_LIBRARY NAMES brotlidec)
find_library(BROTLIENC_LIBRARY NAMES brotlienc)
include(FindPackageHandleStandardArgs)
find_package_handle_standard_args(Brotli DEFAULT_MSG BROTLICOMMON_LIBRARY BROTLIDEC_LIBRARY BROTLIENC_LIBRARY BROTLI_INCLUDE_DIR)

if(NOT BROTLI_FOUND)
        set(BROTLICOMMON_LIBRARY)
        set(BROTLIDEC_LIBRARY)
        set(BROTLIENC_LIBRARY)
        set(BROTLI_INCLUDE_DIR)
else()
        set(BROTLI_LIBRARIES "${BROTLICOMMON_LIBRARY}" "${BROTLIDEC_LIBRARY}" "${BROTLIENC_LIBRARY}")
        set(BROTLI_INCLUDE_DIRS "${BROTLI_INCLUDE_DIR}")
endif()
